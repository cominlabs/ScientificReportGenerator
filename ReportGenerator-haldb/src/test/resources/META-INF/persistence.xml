	<persistence-unit name="ReportGenerator-haldb" transaction-type="RESOURCE_LOCAL">
		<class>fr.inria.cominlabs.activityreport.haldb.model.Author</class>
		<class>fr.inria.cominlabs.activityreport.haldb.model.Category</class>
		<class>fr.inria.cominlabs.activityreport.haldb.model.Document</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:8889/PubliDBTest"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
